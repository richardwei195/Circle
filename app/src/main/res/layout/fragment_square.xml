<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/md_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:viewpager_animatedHeaderImage="true"
        app:viewpager_color="@color/colorPrimary"
        app:viewpager_displayToolbarWhenSwipe="true"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_headerAdditionalHeight="16dp"
        app:viewpager_headerAlpha="1.0"
        app:viewpager_headerHeight="200dp"
        app:viewpager_hideLogoWithFade="true"
        app:viewpager_hideToolbarAndTitle="true"
        app:viewpager_imageHeaderDarkLayerAlpha="0.38"
        app:viewpager_logo="@layout/header_logo"
        app:viewpager_logoMarginTop="72dp"
        app:viewpager_pagerTitleStrip="@layout/pager_title_strip"
        app:viewpager_parallaxHeaderFactor="1.3"
        app:viewpager_transparentToolbar="false" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>